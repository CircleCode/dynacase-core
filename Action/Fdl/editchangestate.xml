function resizePopDoc() {
    var p=window.parent;
    var pb=p.document.getElementById('POPDOC_b');
    var ps=p.document.getElementById('POPDOC_s');
    var pc=p.document.getElementById('POPDOC_c');
    var prs=p.document.getElementById('POPDOC_rs');
    var ih=sh=0;

    if (isIE) {
        sh=document.body.scrollHeight+8;
        ih=document.documentElement.offsetHeight;
    } else {
        sh=document.body.scrollHeight;
        ih=getFrameHeight()-4;
    }
    if (pb) {
        var delta=(sh - parseInt(pb.style.height));
        if (pb) pb.style.height=(sh+50)+'px';
        if (ps) ps.style.height=(sh+50)+'px';
        if (pc) {
            var pcd=parseInt(pc.style.height)+delta+50;
            pc.style.height=pcd+'px';
        }
        if (prs) {

            var prsd=parseInt(prs.style.top)+delta+50;

    console.log("top",prs, delta, prsd);
            prs.style.top=prsd+'px';
        }
    }
}
</script>
