[ZONE FGSEARCH:FGSEARCH_ADDSEARCH]
<form  id="fedit"  
       class="fborder" 
       name="searchdoc"       
       target="_self"
       action="?app=FGSEARCH"
       method="POST"        >
<input type="hidden" name="page" value="0">
<input type="hidden" name="dirid" value="[dirid]">
<input type="hidden" name="sole" value="Y">
<input type="hidden" name="action" value="FULLSEARCH">

[IF viewform]
<div style="text-align:right">
<a style="font-size:80%; "  onclick="addFreedomEngine()" type="text/smartbookmark" rel="[CORE_STANDURL]&app=FGSEARH&action=FULLSEARCH&keyword=%s" title="[TEXT:Add search engine to your browser]">[TEXT:Add search engine]</a>
</div>

<div id="searchzone" class="zsearch">

<div class="logo"><img class="logomini" align="middle" needresize="1"  src="[CORE_LOGOCLIENT]"></div>
<div class="searchp">
<div><input name="keyword" type="text" size="30" value="[key]"></div>
<div><select  class="little"   name="famid" ><option VALUE="0" >[TEXT:any familly]</option>
        [BLOCK SELECTCLASS]<option [famselect] VALUE="[idcdoc]" >[classname]</option>   
        [ENDBLOCK SELECTCLASS]
      </select></div>
</div>

<div class="searchc">
  <input type="submit" onclick="sendNewSearch()" value="[TEXT:ToSearch]">
</div>
<div class="searchm">
<a href="[CORE_STANDURL]app=FGSEARCH&action=FULLEDITDSEARCH&famid=[famid]">[TEXT:Advanced search]</a>
<br><a href="#" onclick="document.getElementById('aide').style.display='inline'">[TEXT:search online help]</a>
</div>

</div>

<div style="clear:both"></div>
[ENDIF viewform]

<table  cellspacing="0" cellpadding="0"  cellborder="0" style="width:100%; margin:10px 0px 5px 0px; padding:0">
<tr>
<td class="bresume left">[resulttext] [IF notthenend]<span id="nextresultbuttontop"><a onclick="sendNextSearch()">[theFollowingText]</a>[ENDIF notthenend]</span></td>
<td class="bresume right">[CORE_CLIENT]</td>
</tr>
</table> 
<div style="right:15px; position:absolute; padding:5px; margin:5px; border:1px solid [COLOR_B4]">
[BLOCK filterfam]<div><span [IFNOT include]style="text-decoration:line-through; font-style:italic"[ENDIF include]>[fam]</span><img needresize="1" src="[icon]" style="padding:0 5 0 5" width="12px"></div>[ENDBLOCK filterfam]
</div>
<div id="aide" style="display:none">
<div id="closeaide"><a href="#" onclick="document.getElementById('aide').style.display='none'">[TEXT:close search online help]</a></div>
[ZONE FGSEARCH:HELP]
</div>
[IF INITSEARCH]
<div style="text-align:center;vertical-align:middle"><img src="[IMG:logodynacase.png]"></div>
[ENDIF INITSEARCH]
[ENDIF SUBSEARCH]

</form>
[IFNOT INITSEARCH]
<div id="dresult" >
<a name="page[page]" style="visibility:hidden">Page [page]</a>
[BLOCK DOCS]<div title="[title]" class="result" onmousedown="viewUrlFromSearch(event,'[CORE_STANDURL]&app=FDL&action=FDL_CARD&id=[id]')"><table cellspacing=0>
<tr class="result"><td class="number">[number]</td>
<td class="result"><img align="left" needresize="1" src="[iconsrc]" width="36px"></td>
<td class="result"><span class="title">[title]</span> <i>[mdate]</i><br >[htext]</td>
</tr></table></div>
[ENDBLOCK DOCS]
[IFNOT SUBSEARCH]
<table id="searchbottom" cellspacing="0" cellpadding="0"  cellborder="0" style="width:100%; margin:10px 0px 5px 0px; padding:0">
<tr>
<td class="bresume left">[resulttext] [IF notthenend]<span id="nextresultbuttonbottom"><a onclick="sendNextSearch()">[theFollowingText]</a>[ENDIF notthenend]</span></td>
<td class="bresume right"></td>
</tr>
</table> [ENDIF SUBSEARCH]
</div>


[IFNOT SUBSEARCH]
<iframe id="nextresult" src="[IMG:1x1.gif]" style="display:none;width:100%;border:none;padding:0px;margin:0px" name="nextresult"></iframe>
<div id="divdoc" style="display:none;">
<p id="closeBar" ><a onclick="openDocInNewWindow()">[TEXT:Open in new window]</a> | <a onclick="hideUrlFromSearch()">[TEXT:Close]</a></p>
<iframe id="detaildoc" src="[IMG:1x1.gif]"  name="detaildoc"></iframe>
</div>

[ENDIF SUBSEARCH]
[ENDIF INITSEARCH]
[IF SUBSEARCH]
<script>
if (window.parent && window.parent != window) {
    var targetS=window.parent.document.getElementById('dresult');
    var targetB=window.parent.document.getElementById('searchbottom');
    var targetBB=window.parent.document.getElementById('nextresultbuttonbottom');
    var targetBT=window.parent.document.getElementById('nextresultbuttontop');
    var origin=document.getElementById('dresult');
    var target=  window.parent.document.createElement("div");
    target.style.borderTop="solid 1px [COLOR_B5]";
    target.innerHTML=origin.innerHTML;
    targetB.parentNode.insertBefore(target, targetB);
    window.parent.location.hash='#page[page]';
    [IFNOT notthenend]
    targetBB.style.display="none";
    targetBT.style.display="none";
    [ENDIF notthenend]
}
</script>
[ENDIF SUBSEARCH]
