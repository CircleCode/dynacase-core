#!/bin/bash

if [ -z "$pgservice_freedom" ]; then
    echo "Undefined or empty pgservice_freedom!"
    exit 1
fi

$wpub/wsh.php --api=updateclass --dbcoord="service='$pgservice_core'" --class=Style

PGSERVICE="$pgservice_freedom" psql --set ON_ERROR_STOP=on <<EOF 2>&1
ALTER TABLE style add COLUMN parsable char DEFAULT 'N';
EOF


RET=$?
if [ $RET -ne 0 ]; then
    echo "Error: SQL error in `basename $0`"
    exit $RET
fi

exit 0