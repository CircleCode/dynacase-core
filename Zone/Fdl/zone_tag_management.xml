<form method="GET" action="" id="formAddTags">
    <label>Tags :</label>
    [IF tagMode]
    <button id="addTags">+</button>
    [ENDIF tagMode]
    <input type="hidden" id="docidForTags" value="[docid]"/>
    <input type="hidden" id="editMode" value="[edit]"/>
    <input type="text" style="display:none;" id="newTagsToAdd"/>
    <div id="documentTags" style="display: inline;">
        [BLOCK docTags]
        <a href="#">[tagName]</a>[coma]
        [IF edit]
        <button id="deleteTag_[tagName]" class="deleteTagButton">-</button>
        [ENDIF edit]
        [ENDBLOCK docTags]
    </div>
</form>
